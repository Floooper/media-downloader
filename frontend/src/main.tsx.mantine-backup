// ğŸš¨ MAIN.TSX EXECUTING - THIS SHOULD APPEAR IN BROWSER DEV TOOLS
console.log("ğŸš¨ MAIN.TSX STARTING EXECUTION");
import React from 'react'
import ReactDOM from 'react-dom/client'
import App from './App.tsx'
import './index.css'

// Global error handling
window.addEventListener('error', (e) => {
  console.error('ğŸš¨ GLOBAL ERROR:', e.error);
  console.error('ğŸš¨ Error message:', e.message);
  console.error('ğŸš¨ Error source:', e.filename, ':', e.lineno, ':', e.colno);
  console.error('ğŸš¨ Error stack:', e.error?.stack);
});

window.addEventListener('unhandledrejection', (e) => {
  console.error('ğŸš¨ UNHANDLED PROMISE REJECTION:', e.reason);
  e.preventDefault(); // Prevent the default handling
});

console.log('ğŸš€ main.tsx loading...');

try {
  const rootElement = document.getElementById('root');
  console.log('ğŸ” Root element:', rootElement);

  if (rootElement) {
    console.log('ğŸ”§ Creating React root...');
    const root = ReactDOM.createRoot(rootElement);
    console.log('ğŸ¯ Rendering App...');
    
    // Wrap App in error boundary
    root.render(
      <>
        <App />
      </>
    );
    console.log('âœ… App rendered successfully');
  } else {
    console.error('âŒ Root element not found!');
    document.body.innerHTML = '<h1 style="color: red;">âŒ Root element not found!</h1>';
  }
} catch (error) {
  console.error('âŒ Failed to render app:', error);
  document.body.style.background = "red";
  document.body.innerHTML = `<h1 style="color: red;">âŒ Failed to render app: ${error.message}</h1>`;
}
